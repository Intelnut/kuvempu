{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "/login/schema",
    "type": "object",
    "title": "Login Schema",
    "description": "The user login schema",
    "required": [
        "email_id",
        "password"
    ],
    "properties": {
        "email_id": {
            "$id": "#/properties/email_id",
            "type": "string",
            "title": "Email Id",
            "description": "Email Id of the user",
            "format": "email"
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "Password",
            "description": "Password to authenticate the user"
        }
    }
}